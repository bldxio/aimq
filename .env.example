# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_api_key

# Database Configuration (for LangGraph checkpointing)
# These are optional - if not set, database connection is built from SUPABASE_URL

# Option 1: Direct PostgreSQL connection string (highest priority)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Override specific connection parameters
# DATABASE_HOST=db.myproject.supabase.co
# DATABASE_PORT=5432              # Use 6543 for connection pooler
# DATABASE_NAME=postgres
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your_password # Falls back to SUPABASE_KEY if not set

# Common scenarios:
# - Supabase Cloud: Leave these empty, use SUPABASE_URL
# - Self-hosted: Set DATABASE_HOST or use DATABASE_URL
# - Local dev: Just SUPABASE_URL=http://localhost:54321 (auto-detected!)
# - Docker: SUPABASE_URL=http://supabase:8000
# - Pooler: Set DATABASE_PORT=6543

# Smart defaults for localhost/127.0.0.1:
#   - Port: Automatically uses 54322 (from `supabase start`)
#   - Password: Automatically uses "postgres" (not the JWT token!)

# Worker Configuration
WORKER_NAME=peon
WORKER_LOG_LEVEL=info
WORKER_IDLE_WAIT=10.0

# LangChain Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_api_key
LANGCHAIN_PROJECT=your_langchain_project

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Resend Configuration (Email Processing)
RESEND_API_KEY=your_resend_api_key
INBOUND_MAIL_HOST=acme.bldx.run  # Root domain for inbound email routing
