version: '3.8'

services:
  aimq-worker:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: aimq-worker

    # Mount tasks.py to allow hot-reloading during development
    volumes:
      - ./tasks.py:/app/tasks.py:ro
      - ./.env:/app/.env:ro

    # Environment variables (loaded from .env file)
    environment:
      - SUPABASE_URL=${SUPABASE_URL}
      - SUPABASE_KEY=${SUPABASE_KEY}
      - WORKER_NAME=${WORKER_NAME:-aimq-worker}
      - WORKER_LOG_LEVEL=${WORKER_LOG_LEVEL:-info}
      - WORKER_IDLE_WAIT=${WORKER_IDLE_WAIT:-10.0}
      - OPENAI_API_KEY=${OPENAI_API_KEY:-}
      - MISTRAL_API_KEY=${MISTRAL_API_KEY:-}
      - LANGCHAIN_TRACING_V2=${LANGCHAIN_TRACING_V2:-false}
      - LANGCHAIN_API_KEY=${LANGCHAIN_API_KEY:-}

    # Restart policy
    restart: unless-stopped

    # Health check (optional - uncomment if you add a health endpoint)
    # healthcheck:
    #   test: ["CMD", "python", "-c", "import sys; sys.exit(0)"]
    #   interval: 30s
    #   timeout: 10s
    #   retries: 3
    #   start_period: 40s

# Optional: Add logging configuration
logging:
  driver: "json-file"
  options:
    max-size: "10m"
    max-file: "3"
